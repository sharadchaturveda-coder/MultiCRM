{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["es2022"],
    "outDir": "./dist",
    "rootDir": "../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "../..",
    "paths": {
      "@multicrm/shared": ["src/shared/src"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "../shared/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
